extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Üye Ol
					div.signup-wall
						form(class='form-signin', action='/signup', method='POST')
							input(type='text', name='username', class='form-control', placeholder='Kullanıcı Adı',required, autofocus)
							input(type='password', name='password', class='form-control nomargin', placeholder='Şifre', required)
							input(type='email', name='email', class='form-control', placeholder='Email',required)
							input(type='text', name='firstName', class='form-control', placeholder='Ad',required)
							input(type='text', name='lastName', class='form-control', placeholder='Soyad',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Üye Ol
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}
