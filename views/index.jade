extends layout
 
block content

  #login.container
    #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
        .row
          .iconmelon
            svg(viewbox='0 0 32 32')
              g(filter='')
                use(xlink:href='#git')
        |         
        .panel.panel-default
          .panel-heading
            .panel-title.text-center Mesajla&scedil;ma Uygulamas&imath;
          |             
          .panel-body
            p#kullanici_adi_hatasi(style='text-align: center;')
            |                 
            form#kullanicigir.form-horizontal(name='form', action='/login' method='POST')
              .input-group
                span.input-group-addon
                  i.glyphicon.glyphicon-user
                |                         
                input#kullaniciadi.form-control(type='text', name='username', value='', placeholder='Kullanıcı ismi giriniz')
                input#sifre.form-control(type='password', name='password', value='', placeholder='Şifre Giriniz')
              |                     
              br
              |                     
              .form-group
                // Button
                .col-sm-12.controls
                  button#kullanicibuton.btn.btn-primary.pull-right(type='submit', href='#')
                    i.glyphicon.glyphicon-log-in
                    |  Giri&scedil; Yap
            a.center-block(href='/signup', class='text-center new-account',style='text-align: center') Üye Ol
            #message
            if message
              h1.text-center.error-message #{message}
 
