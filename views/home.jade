extends layout

block content
    script(src='javascripts/usersocket.js')
    #messageBox.container
    h1#username.text-center.login-title #{user.username}
    .row
            strong Online Kullanıcılar
        .row(style='margin-top: 10px')
            .conversation-wrap.col-lg-3
                #onlineUsers
                    .media.conversation
                        a.pull-left(href='#')
                            img.media-object(data-src='holder.js/64x64', alt='64x64', style='width: 50px; height: 50px;', src='data:image/png;base64,')
                        .media-body
                            h5.media-heading Naimish Sakhpara
                            small Hello
                #groupPlace.message-wrap
            .message-wrap.col-lg-6
                #chatNew.msg-wrap
                .send-wrap
                    textarea#messageArea.form-control.send-message(rows='3', placeholder='Write a reply...')
                .btn-panel
                    a#sendMessageButton.col-lg-4.text-right.btn.send-message-btn.pull-right(href='', role='button')
                        i.fa.fa-plus
                        |  Send Message
                .row
            .message-wrap.col-lg-3
                #createGroupDiv.msg-wrap
                    label.text-center.center-block(style='text-align: center', for='usr')
                        strong Grup Kur
                    br
                    input#groupName.form-control(aria-describedby='emailHelp', placeholder='Grup Adı Giriniz')
                    br
                    button#createGroup.btn.btn-primary.center-block(type='button') Grup Kur
                    br
                    br
                    br
                #groupBox.msg-wrap
                    label.text-center.center-block(style='text-align: center', for='usr')
                        strong Gruba Kullanıcı Ekle
                    label(for='usr') Grup Adı:
                    br
                    input#groupNameForUser.form-control(aria-describedby='emailHelp', placeholder='Grup Adı Giriniz')
                    br
                    label(for='usr') Kullanıcıları Giriniz:
                    #addGroupUser
                    input#user1.form-control(aria-describedby='emailHelp', placeholder='Kullanıcı Adı Giriniz ')
                    br
                    button#addGroupUserButton.btn.btn-primary.center-block(type='button') Kullanıcı Ekle

